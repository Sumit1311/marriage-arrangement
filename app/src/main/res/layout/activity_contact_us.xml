<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ImageView
        android:id="@+id/listItemNoteImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="50sp"
        android:src="@drawable/contactus" />

    <TextView
        android:id="@+id/message"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listItemNoteImg"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="41dp"
        android:text="Bhavin Chauhan"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listItemNotTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/listItemNoteImg"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="+91 8460177993"
        android:textSize="16dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listItemNoteImg"
        android:layout_alignStart="@+id/message"
        android:text="Menu Arranger" />

    <ImageView
        android:id="@+id/call2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="110sp"
        android:src="@drawable/contactus"
        />

    <TextView
        android:id="@+id/number2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/call2"
        android:layout_marginStart="-15dp"
        android:layout_marginTop="-5dp"
        android:layout_toEndOf="@+id/call2"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="+91 9638146030"
        android:textSize="18dp"
        android:textStyle="bold" />

    <!--view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="120sp"
        android:background="#a40404" /-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listItemNotTitle"
        android:layout_marginStart="62dp"
        android:text="Mobile" />


</RelativeLayout>