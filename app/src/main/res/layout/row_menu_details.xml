<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:layout_height="130dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/relrowmenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_row_menuid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="24dp"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/txt_row_menudt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txt_row_menutime"
            android:layout_alignTop="@+id/txt_row_menuid"
            android:text="TextView"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/txt_row_menutype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txt_row_menuid"
            android:layout_marginTop="69dp"
            android:text="TextView"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#FFFFFF"
            android:id="@+id/txt_row_menutime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/txt_row_menutype"
            android:layout_marginEnd="97dp"
            android:text="TextView"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>


</android.support.v7.widget.CardView>