<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:fitsSystemWindows="true"
            android:id="@+id/img_disp_guest_transport"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:textSize="24dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="#EEEEEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bhavin"
                android:id="@+id/txt_disp_guest_transport_drivername"/>
            <TextView
                android:textSize="24dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="#EEEEEE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9879877899"
                android:id="@+id/txt_disp_guest_transport_driverno"/>
            <TextView
                android:textSize="24dp"
                android:textStyle="bold"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="#EEEEEE"
                android:text="GJ##444444"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_disp_guest_transport_vehicleno"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>